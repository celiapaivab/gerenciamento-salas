{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gerenciamento de Salas de Reunião",
    "version": "1.0.0",
    "description": "API para agendamento e gerenciamento de salas de reunião."
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Cadastro de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["login", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuário cadastrado com sucesso" },
          "400": { "description": "Usuário já existe ou dados inválidos" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["login", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/rooms": {
      "get": {
        "summary": "Listar salas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Salas listadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          },
          "400": { "description": "Sem autorização para visualizar salas" }
        }
      },
      "post": {
        "summary": "Cadastrar nova sala",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Sala cadastrada com sucesso" },
          "400": { "description": "Nome da sala é obrigatório ou já existe uma sala com esse nome" }
        }
      }
    },
    "/bookings": {
      "post": {
        "summary": "Agendar sala",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "roomId": { "type": "integer" },
                  "start": { "type": "string", "format": "date-time" },
                  "end": { "type": "string", "format": "date-time" },
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["roomId", "start", "end", "name"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Agendamento realizado com sucesso" },
          "400": { "description": "Sala não está disponível para uso ou dados inválidos" }
        }
      }
    },
    "/bookings/{id}": {
      "delete": {
        "summary": "Cancelar agendamento",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Cancelamento realizado com sucesso" },
          "400": { "description": "Agendamento não encontrado ou sem permissão" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Room": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
